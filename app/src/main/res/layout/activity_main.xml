<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/coffecup" />



    <TextView
        android:id="@+id/coffe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coffee House"
        android:textStyle="bold"
        android:textSize="36sp"
        android:layout_centerHorizontal="true"

        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"
        android:padding="25dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service 24 Hours Open"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/coffe"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/telephonetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/telephoneimage"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:fontFamily="sans-serif-light"
        android:padding="10dp"
        android:text="555-24433"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/telephoneimage" />
    <TextView
        android:id="@+id/addresstext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/address_image" android:fontFamily="sans-serif-light"
        android:padding="5dp"
        android:layout_alignBottom="@id/address_image"
        android:text="280 W 79th St, Albany"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/address_image" />


    <ImageView
        android:id="@+id/telephoneimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:baselineAlignBottom="true"
        android:padding="20dp"
        android:src="@drawable/telephone"
        />
0
    <ImageView
        android:id="@+id/address_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/telephoneimage"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:padding="15dp"
        android:paddingBottom="20dp"
        android:src="@drawable/address" />"
    />

</RelativeLayout>